{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread" : true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-undef" : "off",
    "new-parens" :"off",
    "indent": ["error", 4],
    "max-len": ["error", 200],
    "react/jsx-indent": ["error", 4],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]

  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "airbnb"],
  "env" :{
    "jest" :true
  }
}
